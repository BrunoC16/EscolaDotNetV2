<!--Vou tipar aqui-->
@model CreateCursoViewModel


@* <h5> Cadastramento de novos cursos </h5> *@
<!-- Vamos criar um a linha-->

<div class="container">



  <div class="row justify-content-center mb-5">

    <div class="col-sm-12 col-md-10 col-lg-10">
      <!--Dentro da linha vamos criar uma coluna-->

      <div class="col">

        <h2 class="text-center">@ViewData["title"]</h2>
        <form method="post">


          <!--Nome-->

          <div class="mb-2">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" placeholder="#">
          </div>

          <!--Título-->

          <div class="mb-2">
            <label asp-for="Titulo" class="form-label">Título</label>
            <input asp-for="Titulo" type="text" class="form-control" placeholder="#">
          </div>

          <!--Descrição-->
          <div class="mb-2">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <input asp-for="Descricao" type="text" class="form-control" placeholder="#">
          </div>

          <!--Perfil-->
          <div class="mb-2">
            <label asp-for="Perfil" class="form-label">Perfil</label>
            <input asp-for="Perfil" type="text" class="form-control" placeholder="#">
          </div>

          <!--Requisito-->
          <div class="mb-2">
            <label asp-for="PreRequisitos" class="form-label">Requisito</label>
            <input asp-for="PreRequisitos" type="text" class="form-control" placeholder="#">
          </div>

          <!--Conteúdos-->
          <div class="mb-2">
            <label asp-for="Conteudo" class="form-label">Conteúdos</label>
            <input asp-for="Conteudo" type="text" class="form-control" placeholder="#">
          </div>

          <!--Recursos-->
          <div class="mb-2">
            <label asp-for="Recursos" class="form-label">Recursos</label>
            <input asp-for="Recursos" type="text" class="form-control" placeholder="#">
          </div>

          <!--CH-->
          <div class="mb-2">
            <label asp-for="CargaHoraria" class="form-label">Carga Horária</label>
            <input asp-for="CargaHoraria" type="number" class="form-control" placeholder="Apenas números">
          </div>

          <!--Prazo-->
          <div class="mb-2">
            <label asp-for="PrazoMeses" class="form-label">Prazo</label>
            <input asp-for="PrazoMeses" type="number" class="form-control" placeholder="Período">
          </div>

          <div class="form-row text-center">

            <button type="submit" class="btn btn-warning font-weight-bold">Enviar</button>
 
          </div>
        </form>
 
      </div>
    </div>
  </div>
</div>


<br>

